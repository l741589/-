<Window x:Class="鹅加密.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="鹅加密" Height="350" Width="525">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="input" Grid.ColumnSpan="3" TextWrapping="Wrap" AcceptsReturn="True" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">在这里输入要加密/解密的文字</TextBox>
        <Button Content="加密" Grid.Row="1" Grid.Column="0" Click="Button_Click"/>
        <Button Content="解密" Grid.Row="1" Grid.Column="2" Click="Button_Click_1"/>
        <TextBox x:Name="output" Grid.ColumnSpan="3" Grid.Row="2" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">这里出结果</TextBox>
    </Grid>
</Window>
